<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Common_Text">
        <item name="android:textSize">@dimen/text_size_level3</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/distance_level3</item>
        <item name="android:paddingTop">@dimen/distance_level2</item>
        <item name="android:paddingRight">@dimen/distance_level3</item>
        <item name="android:paddingBottom">@dimen/distance_level2</item>
    </style>
</resources>
